<% layout("/layouts/boilerplate.ejs") %>
<div class="container loginPage">
  <h2 class="offset-5 mt-3">Wanderlust</h2>
  <div class="row mt-3 offset-1">
    <div
      class="col-5 offset-3 border border rounded p-4 text-bg-light shadow mt-3"
    >
      <form method="POST" action="/login" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label" for="username"
            >Username</label
          >
          <input
            name="username"
            type="text"
            placeholder="Enter Your Username"
            class="form-control co-sm-4"
            id="username"
            required
          />
          <div class="invalid-feedback">Enter valid Username</div>
          <div class="valid-feedback">looks good !</div>
        </div>

        <div class="mb-4">
          <label for="password" class="form-label" for="password"
            >Password</label
          >
          <input
            name="password"
            type="password"
            placeholder="Enter Your Password"
            class="form-control"
            id="password"
            required
          />
          <div class="valid-feedback">looks good !</div>
        </div>
        <button class="btn btn-danger offset-5 col-2">log in</button
        ><br /><br />
        <hr />
        <a href="/signup" class="new-acc offset-4">Create new account ?</a>
      </form>
    </div>
  </div>
</div>
<br />
