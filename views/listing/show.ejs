<% layout("/layouts/boilerplate.ejs") %> <br>

<!-- SECOND -->

<div class="row">
    <div class="col-6 offset-2">
        <h3><%= data.title %></h3>
        <div class="card listing-card">
            <a href="<%= data.image %>"><img src="<%= data.image %>" class="card-img-top show-img" alt="Listing_image"></a>
            <div class="card-body">
                <p>- Owned by <i><b><%= data.owner ? data.owner.username : 'Unknown Owner' %></b></i></p>
                <p>- <%= data.description %></p>
                <p>- &#8377;<%= data.price ? data.price.toLocaleString("en-IN") : '0' %><br></p>
                <p>- <%= data.country %> <br></p>
                <p>- <%= data.location %> <br></p>
            </div>
        </div>
        <div class="show-btns">
            <a href="/listing/<%= data._id %>/edit" class="btn btn-dark show-edit-btn">Edit</a>
            <form method="POST" action="/listing/<%= data._id %>?_method=DELETE">
                <button class="btn btn-dark offset-3 show-del-btn">Delete</button>
            </form>  
        </div>        
    </div>
        <!-- Review part -->  
        <div class="col-7 offset-2 mb-3 mt-2">
            <hr>
            <h4>Leave a Review -</h4>
            <form action="/listing/<%= data._id %>/reviews" method="POST" novalidate class="needs-validation">
              <fieldset class="starability-slot">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
              <div>
                <label for="comment" class="form-label mt-2">Comment :</label>
                <textarea name="review[comment]" id="comment" class="form-control" rows="5" cols="5" placeholder="Leave your Comment Here" required></textarea>
              </div>
              <div class="invalid-feedback">Please add comment</div> 
    
              <button class="btn btn-outline-primary mt-3">Submit</button>
            </form><br>
    
            <!-- ALL REVIEWS -->
            <p><b>All Reviews :-</b></p>
            <div class="row">
              <% for (let review of data.review) { %>
                  <div class="card mb-3 col-5 ms-3 review-bg">
                     <div class="card-body mb-1 mt-2">
                        <h6 class="card-subtitle">
                            <i class="fa-solid fa-circle-user me-2"></i>
                            <b>@<%= review.author && review.author.username ? review.author.username : 'UNKNOWN' %></b>
                        </h6>
                        <p class="starability-result mt-2" data-rating="<%= review.rating %>">
                            Rated: 3 stars
                          </p>
                        <p class="card-text"><%= review.comment %></p>
                     </div>
                     <hr>
                     <form method="POST" action="/listing/<%= data._id %>/reviews/<%= review._id %>?_method=DELETE">
                        <button class="btn btn-outline-secondary mb-2 offset-5">Delete</button>
                     </form>
                  </div>
              <% } %>
            </div>
        </div>
    </div>